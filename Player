using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.SceneManagement;

public class Player : MonoBehaviour
{
    public float moveSpeed;

    private Animator anim;
    private int Keycount = 0;

    public GameObject breakstone;

    private AudioSource audio;
    public AudioClip KeySound;

    // Start is called before the first frame update
    void Start()
    {
        anim = GetComponent<Animator>();
        this.audio = this.gameObject.AddComponent<AudioSource>();
        this.audio.loop = false;
    }

    // Update is called once per frame
    void Update()
    {
        PlayerMove();

        DeleteKey();
    }

    void PlayerMove()
    {
        if (Input.GetAxisRaw("Horizontal") > 0f || Input.GetAxisRaw("Horizontal") < 0f)
        {
            transform.Translate(new Vector3(Input.GetAxisRaw("Horizontal") * moveSpeed * Time.deltaTime, 0f, 0f));
        }
        if (Input.GetAxisRaw("Vertical") > 0f || Input.GetAxisRaw("Vertical") < 0f)
        {
            transform.Translate(new Vector3(0f, Input.GetAxisRaw("Vertical") * moveSpeed * Time.deltaTime, 0f));
        }

        anim.SetFloat("MoveX", Input.GetAxisRaw("Horizontal"));
        anim.SetFloat("MoveY", Input.GetAxisRaw("Vertical"));
    }

    void OnTriggerEnter2D(Collider2D other)
    {

        if (other.tag == "NextDoor2")
        {
            SceneManager.LoadScene("Stage2");
        }

        if (other.tag == "NextDoor3")
        {
            SceneManager.LoadScene("Stage3");
        }

        if (other.tag == "NextDoor4")
        {
            if(Keycount >= 3)
            {
                Keycount = Keycount - 3;
                SceneManager.LoadScene("Stage4");
            }
           
        }

        if (other.tag == "NextDoorClear")
        {
            if (Keycount >= 3)
            {
                SceneManager.LoadScene("Clear");
            }
        }


        if (other.tag == "trap2")
        {
            SceneManager.LoadScene("FailStage2");
        }

        if (other.tag == "trap3")
        {
            SceneManager.LoadScene("FailStage3");
        }

        if (other.tag == "trap4")
        {
            SceneManager.LoadScene("FailStage4");
        }

        if (other.tag == "key")
        {
            this.audio.clip = this.KeySound;
            this.audio.Play();
            Keycount += 1;
            Destroy(other.gameObject);
        }

      
    }

    void DeleteKey()
    {
        if(Keycount >= 3)
        {
            Destroy(breakstone);
        }
    }
}
